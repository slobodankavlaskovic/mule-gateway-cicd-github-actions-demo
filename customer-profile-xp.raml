#%RAML 1.0
title: Customer Profile Experience API Advanced
version: v1
baseUri: /customer
description: |
  A secure, high-traffic Customer Profile Look-up Experience API that provides 
  individual customer profile information retrieval capabilities. This API is 
  designed for enterprise-grade performance and security requirements.

types:
  CustomerProfile:
    type: object
    description: Complete customer profile information
    properties:
      customerId:
        type: string
        description: Unique customer identifier
        required: true
      firstName:
        type: string
        description: Customer's first name
        required: true
      lastName:
        type: string
        description: Customer's last name
        required: true
      email:
        type: string
        description: Customer's email address
        required: true
      status:
        type: string
        enum: ["Active", "Inactive", "Pending"]
        description: Current status of the customer account
        required: true
    example:
      customerId: "1234567890123"
      firstName: "John"
      lastName: "Doe"
      email: "john.doe@example.com"
      status: "Active"

  ErrorResponse:
    type: object
    description: Standard error response format
    properties:
      error:
        type: object
        properties:
          code:
            type: string
            description: Error code identifier
          message:
            type: string
            description: Human-readable error message
          timestamp:
            type: string
            description: ISO 8601 timestamp of when the error occurred
    example:
      error:
        code: "CUSTOMER_NOT_FOUND"
        message: "Customer with the specified ID was not found"
        timestamp: "2024-11-28T12:57:30Z"

traits:
  standardHeaders:
    description: Standard headers for all API requests
    headers:
      Content-Type:
        type: string
        default: application/json
        description: Media type of the request/response body
      Accept:
        type: string
        default: application/json
        description: Media types that are acceptable for the response

/v1/profiles:
  description: Customer profile management endpoint
  /{customer_id}:
    description: Individual customer profile lookup by customer ID
    uriParameters:
      customer_id:
        type: string
        description: |
          Unique customer identifier. Must be a numeric string between 10 and 15 digits.
          This parameter is used to retrieve specific customer profile information.
        pattern: ^\d{10,15}$
        required: true
        example: "1234567890123"
    get:
      is: [standardHeaders]
      description: |
        Retrieves detailed profile information for a specific customer using their unique customer ID.
        This endpoint is optimized for high-traffic scenarios and provides comprehensive customer data
        including personal information and account status.
      responses:
        200:
          description: |
            Successfully retrieved customer profile information. Returns complete customer details
            including identification, contact information, and current account status.
          body:
            application/json:
              type: CustomerProfile
              example:
                customerId: "1234567890123"
                firstName: "John"
                lastName: "Doe"
                email: "john.doe@example.com"
                status: "Active"
        404:
          description: |
            Customer not found. The specified customer ID does not exist in the system or
            the customer record is not accessible.
          body:
            application/json:
              type: ErrorResponse
              example:
                error:
                  code: "CUSTOMER_NOT_FOUND"
                  message: "Customer with the specified ID was not found"
                  timestamp: "2024-11-28T12:57:30Z"
        400:
          description: |
            Bad request. The customer ID parameter does not meet the required format or
            validation criteria.
          body:
            application/json:
              type: ErrorResponse
              example:
                error:
                  code: "INVALID_CUSTOMER_ID"
                  message: "Customer ID must be a numeric string between 10 and 15 digits"
                  timestamp: "2024-11-28T12:57:30Z"
        500:
          description: |
            Internal server error. An unexpected error occurred while processing the request.
          body:
            application/json:
              type: ErrorResponse
              example:
                error:
                  code: "INTERNAL_SERVER_ERROR"
                  message: "An unexpected error occurred while processing your request"
                  timestamp: "2024-11-28T12:57:30Z"
