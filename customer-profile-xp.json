{
  "openapi": "3.0.3",
  "info": {
    "title": "Customer Profile Exp API",
    "description": "A secure, high-traffic Customer Profile Look-up Experience API that provides customer profile information retrieval capabilities.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/customer/v1",
      "description": "Customer Profile API base path"
    }
  ],
  "paths": {
    "/profiles/{customer_id}": {
      "get": {
        "summary": "Retrieve customer profile by ID",
        "description": "Retrieves detailed customer profile information for a given customer ID. Designed for high-traffic scenarios with secure access patterns.",
        "operationId": "getCustomerProfile",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "required": true,
            "description": "Unique customer identifier (10-15 digits)",
            "schema": {
              "type": "string",
              "pattern": "^\\d{10,15}$"
            },
            "example": "1234567890123"
          }
        ],
        "responses": {
          "200": {
            "description": "Customer profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "customerId": {
                      "type": "string",
                      "description": "Unique customer identifier"
                    },
                    "firstName": {
                      "type": "string",
                      "description": "Customer's first name"
                    },
                    "lastName": {
                      "type": "string",
                      "description": "Customer's last name"
                    },
                    "email": {
                      "type": "string",
                      "description": "Customer's email address"
                    },
                    "status": {
                      "type": "string",
                      "enum": ["Active", "Inactive", "Pending"],
                      "description": "Current status of the customer account"
                    }
                  },
                  "required": ["customerId", "firstName", "lastName", "email", "status"],
                  "additionalProperties": false
                },
                "example": {
                  "customerId": "1234567890123",
                  "firstName": "John",
                  "lastName": "Doe",
                  "email": "john.doe@example.com",
                  "status": "Active"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message"
                    },
                    "code": {
                      "type": "string",
                      "description": "Error code"
                    }
                  },
                  "required": ["error", "code"]
                },
                "example": {
                  "error": "Customer not found",
                  "code": "CUSTOMER_NOT_FOUND"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CustomerProfile": {
        "type": "object",
        "description": "Customer profile data structure containing essential customer information",
        "properties": {
          "customerId": {
            "type": "string",
            "description": "Unique customer identifier"
          },
          "firstName": {
            "type": "string",
            "description": "Customer's first name"
          },
          "lastName": {
            "type": "string",
            "description": "Customer's last name"
          },
          "email": {
            "type": "string",
            "description": "Customer's email address"
          },
          "status": {
            "type": "string",
            "enum": ["Active", "Inactive", "Pending"],
            "description": "Current status of the customer account"
          }
        },
        "required": ["customerId", "firstName", "lastName", "email", "status"],
        "additionalProperties": false
      }
    }
  }
}
