{
  "openapi": "3.0.3",
  "info": {
    "title": "Customer Profile Exp API",
    "description": "A secure, high-traffic Customer Profile Look-up Experience API that provides access to individual customer profile information. This API is designed for high-performance scenarios and follows MuleSoft best practices for Experience APIs.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/customer/v1",
      "description": "Customer Profile API base path"
    }
  ],
  "paths": {
    "/profiles/{customer_id}": {
      "get": {
        "summary": "Retrieve customer profile by ID",
        "description": "Fetches detailed profile information for a specific customer using their unique customer identifier. The customer ID must be a numeric string between 10 and 15 digits.",
        "operationId": "getCustomerProfile",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "required": true,
            "description": "Unique customer identifier (10-15 digits)",
            "schema": {
              "type": "string",
              "pattern": "^\\d{10,15}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Customer profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerProfile"
                },
                "example": {
                  "customerId": "1234567890123",
                  "firstName": "John",
                  "lastName": "Doe",
                  "email": "john.doe@example.com",
                  "status": "Active"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": {
                    "code": "CUSTOMER_NOT_FOUND",
                    "message": "Customer with the specified ID was not found",
                    "details": "No customer record exists for the provided customer_id"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CustomerProfile": {
        "type": "object",
        "description": "Complete customer profile information",
        "required": [
          "customerId",
          "firstName",
          "lastName",
          "email",
          "status"
        ],
        "properties": {
          "customerId": {
            "type": "string",
            "description": "Unique customer identifier",
            "pattern": "^\\d{10,15}$"
          },
          "firstName": {
            "type": "string",
            "description": "Customer's first name",
            "minLength": 1,
            "maxLength": 50
          },
          "lastName": {
            "type": "string",
            "description": "Customer's last name",
            "minLength": 1,
            "maxLength": 50
          },
          "email": {
            "type": "string",
            "description": "Customer's email address",
            "format": "email"
          },
          "status": {
            "type": "string",
            "description": "Current status of the customer account",
            "enum": [
              "Active",
              "Inactive",
              "Pending"
            ]
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "description": "Standard error response format",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "type": "object",
            "required": [
              "code",
              "message"
            ],
            "properties": {
              "code": {
                "type": "string",
                "description": "Error code identifier"
              },
              "message": {
                "type": "string",
                "description": "Human-readable error message"
              },
              "details": {
                "type": "string",
                "description": "Additional error details"
              }
            }
          }
        }
      }
    }
  }
}
