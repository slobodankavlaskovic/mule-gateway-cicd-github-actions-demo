{
  "openapi": "3.0.3",
  "info": {
    "title": "Customer Profile Exp API",
    "description": "A secure, high-traffic Experience API for customer profile lookup operations. This API provides access to individual customer profile information through a standardized interface.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/customer/v1",
      "description": "Customer Profile API base path"
    }
  ],
  "paths": {
    "/profiles/{customer_id}": {
      "get": {
        "summary": "Retrieve customer profile by ID",
        "description": "Fetches detailed profile information for a specific customer using their unique customer identifier. The customer ID must be a numeric string between 10-15 digits.",
        "operationId": "getCustomerProfile",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "required": true,
            "description": "Unique customer identifier (10-15 digits)",
            "schema": {
              "type": "string",
              "pattern": "^\\d{10,15}$"
            },
            "example": "1234567890123"
          }
        ],
        "responses": {
          "200": {
            "description": "Customer profile retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "title": "CustomerProfile",
                  "description": "Complete customer profile information",
                  "required": [
                    "customerId",
                    "firstName",
                    "lastName",
                    "email",
                    "status"
                  ],
                  "properties": {
                    "customerId": {
                      "type": "string",
                      "description": "Unique customer identifier",
                      "example": "1234567890123"
                    },
                    "firstName": {
                      "type": "string",
                      "description": "Customer's first name",
                      "example": "John"
                    },
                    "lastName": {
                      "type": "string",
                      "description": "Customer's last name",
                      "example": "Doe"
                    },
                    "email": {
                      "type": "string",
                      "description": "Customer's email address",
                      "format": "email",
                      "example": "john.doe@example.com"
                    },
                    "status": {
                      "type": "string",
                      "description": "Current status of the customer account",
                      "enum": [
                        "Active",
                        "Inactive",
                        "Pending"
                      ],
                      "example": "Active"
                    }
                  }
                },
                "example": {
                  "customerId": "1234567890123",
                  "firstName": "John",
                  "lastName": "Doe",
                  "email": "john.doe@example.com",
                  "status": "Active"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found - The specified customer ID does not exist in the system",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message"
                    },
                    "message": {
                      "type": "string",
                      "description": "Detailed error description"
                    }
                  }
                },
                "example": {
                  "error": "Customer Not Found",
                  "message": "No customer found with the provided customer ID"
                }
              }
            }
          }
        }
      }
    }
  }
}
